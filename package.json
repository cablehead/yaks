{
  "name": "yaks",
  "version": "0.1.0",
  "description": "",
  "type": "module",
  "scripts": {
    "dev": "tauri dev",
    "build": "tauri build",
    "test": "npm run test:run && cargo test --manifest-path src-tauri/Cargo.toml",
    "test:run": "vitest run",
    "test:ui": "vitest --ui",
    "test:backend": "cargo test --manifest-path src-tauri/Cargo.toml",
    "lint": "npm run lint:ui && npm run lint:backend",
    "lint:ui": "eslint src/ --ext .ts,.tsx",
    "lint:backend": "cargo clippy --manifest-path src-tauri/Cargo.toml -- -D warnings",
    "lint:fix": "npm run lint:ui:fix && npm run lint:backend:fix",
    "lint:ui:fix": "eslint src/ --ext .ts,.tsx --fix",
    "lint:backend:fix": "cargo clippy --manifest-path src-tauri/Cargo.toml --fix -- -D warnings",
    "fmt": "npm run fmt:ui && npm run fmt:backend",
    "fmt:ui": "prettier --check \"src/**/*.{ts,tsx}\"",
    "fmt:backend": "cargo fmt --manifest-path src-tauri/Cargo.toml --check",
    "fmt:fix": "npm run fmt:ui:fix && npm run fmt:backend:fix",
    "fmt:ui:fix": "prettier --write \"src/**/*.{ts,tsx}\"",
    "fmt:backend:fix": "cargo fmt --manifest-path src-tauri/Cargo.toml",
    "check": "npm run fmt && npm run lint && npm test"
  },
  "license": "MIT",
  "dependencies": {
    "@codemirror/commands": "^6.7.1",
    "@codemirror/lang-markdown": "^6.2.6",
    "@codemirror/state": "^6.4.1",
    "@codemirror/theme-one-dark": "^6.1.2",
    "@codemirror/view": "^6.34.3",
    "@tauri-apps/api": "^2",
    "@tauri-apps/plugin-opener": "^2",
    "codemirror": "^6.0.1",
    "marked": "^14.1.3",
    "scru128": "^3.0.6",
    "solid-js": "^1.9.3"
  },
  "devDependencies": {
    "@tauri-apps/cli": "^2",
    "@typescript-eslint/eslint-plugin": "^8.40.0",
    "@typescript-eslint/parser": "^8.40.0",
    "@vitest/ui": "^2.1.8",
    "eslint": "^9.33.0",
    "eslint-plugin-solid": "^0.14.5",
    "jsdom": "^26.1.0",
    "prettier": "^3.6.2",
    "typescript": "~5.6.2",
    "vite": "^6.0.3",
    "vite-plugin-solid": "^2.11.0",
    "vitest": "^2.1.8"
  }
}
